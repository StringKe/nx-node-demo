# Build the docker image with `npx nx docker-build app2`.
# Tip: Modify "docker-build" options in project.json to change docker build args.
#
# Run the container with `docker run -p 3000:3000 -t app2`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system app2 && \
          adduser --system -G app2 app2

COPY dist/apps/app2 app2
RUN chown -R app2:app2 .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix app2 --omit=dev -f install

CMD [ "node", "app2" ]
